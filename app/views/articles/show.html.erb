
<div class="col-xs-8 col-xs-offset-2">
<h3 align="center">Title: <%= @article.title %></h3>
</div>
<div class="well col-xs-10 col-xs-offset-1 margin-top-20px ">
<h4 align="center">Description</h4><hr>

<!-- maintains the format used as such! -->
<div><%= simple_format(@article.description) %></div>
<br>
<hr>
<%= link_to "Edit this article", edit_article_path(@article),class: "btn btn-primary" %>
<%= link_to "Delete this article", article_path(@article),method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger" %>
<%= link_to "View all articles", articles_path,class: "btn btn-success" %>
</div>
