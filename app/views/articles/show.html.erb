
<div class="col-xs-8 col-xs-offset-2 padding-top-10px">
  <h3 align="center">Title: <%= @article.title %></h3>
</div>
<%= if @article.user %>
  <div class="well margin-top-20px col-xs-10 col-xs-offset-1">
  <!-- maintains the format used as such! -->
      <ul align="center" class="no-list-style padding">
            <li><%= gravitor_for(@article.user) %></li>
            <li><h4><%= link_to @article.user.username,user_path(@article.user)%></h4></li>
            <li><%= pluralize(@article.user.articles.count,"article") %></li>
      </ul>
      <h4>Description</h4>
      <%= simple_format(@article.description) %>
      <br>
      <%= link_to "Edit this article", edit_article_path(@article),class: "btn btn-primary" %>
      <%= link_to "Delete this article", article_path(@article),method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger" %>
      <%= link_to "View all articles", articles_path,class: "btn btn-success" %>
  </div>
<% end %>
